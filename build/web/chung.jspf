
<%@ page pageEncoding="UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>

<c:choose>
    <%-- TRƯỜNG HỢP 1: ADMIN ĐÃ ĐĂNG NHẬP --%>
    <c:when test="${sessionScope.account != null && sessionScope.account.loaiNguoiDung == 'QuanTriVien'}">
        <%@include file="header_admin.jspf" %>
    </c:when>

    <%-- TRƯỜNG HỢP 2: KHÁCH HÀNG ĐÃ ĐĂNG NHẬP HOẶC KHÁCH VÃNG LAI --%>
    <c:otherwise>
        <%@include file="header.jspf" %>
    </c:otherwise>
</c:choose>